{
  "manifest_version": 2,
  "name": "Safe Twitter Browsing for Conservatives",
  "short_name": "SJW Bot",
  "description": "Know who the SJWs are and crowd-source new SJWs as you discover them.",
  "browser_action": {
     "default_icon": "sjw128.png"
   },
  "version": "1.1",
  "icons": { "16": "sjw16.png",
           "48": "sjw48.png",
          "128": "sjw128.png" },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "background":{
    "scripts": ["jquery.min.js", "eventPage.js", "icon.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.twitter.com/*",
        "https://*.twitter.com/*"
        ],
      "js":["jquery.min.js","content.js" ],
      "css":["style.css"]
    }
  ]
}
